# REDIRECTS
###

###
# Directory and Domain Redirects:
###

# Redirect HTTPS requests to HTTP
RewriteCond %{REQUEST_URI} !^/secure/?(.*)?$ [NC]
RewriteCond %{HTTPS} on
RewriteRule (.*) http://%{SERVER_NAME}%{REQUEST_URI} [L]

# Turn off HTTPS in secure folder.
# Comment next 3 lines if ssl IS available
RewriteCond %{REQUEST_URI} ^/secure/?(.*)?$ [NC]
RewriteCond %{HTTPS} on
RewriteRule .* http://%{SERVER_NAME}%{REQUEST_URI} [R=302]

# Force HTTPS in secure folder.
# Comment next 3 lines if ssl not available
#RewriteCond %{REQUEST_URI} ^/secure/?(.*)?$ [NC]
#RewriteCond %{HTTPS} !=on
#RewriteRule .* https://%{SERVER_NAME}%{REQUEST_URI} [R=302,L]

# Get rid of www.
#RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
#RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

# Hide index.php
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^/]+/)*index\.php(.*)\ HTTP/
RewriteRule ^(([^/]+/)*)index\.php(.*)$ /$1 [R=301,L]

# Redirect to maintenance page. Comment out when not needed.
#RewriteCond %{REQUEST_URI} ^/secure(.*)?$ [NC]
#RewriteCond %{REQUEST_URI} !^/secure/login/?$ [NC]
#RewriteCond %{REQUEST_URI} ^/secure/login/register/?(.*)?$ [NC]
#RewriteCond %{REQUEST_URI} !^/secure/theme(.*)?$ [NC]
#RewriteCond %{REQUEST_URI} !^/secure/scripts(.*)?$ [NC]
#RewriteCond %{REQUEST_URI} !^/secure/images(.*)?$ [NC]
#RewriteRule .* http://%{SERVER_NAME}/maintenance.php [R=302,L]

# Completely hide some files and directories (ie version control files).
RedirectMatch 404 "(?:.*)/(?:[.#].*)$"
RedirectMatch 404 "(?:.*)~$"
RedirectMatch 404 "(?:.*)/(?:CVS|RCS|_darcs)(?:/.*)?$"

###
# END REDIRECTS


# Custom Error Pages
###

# Bad Request
ErrorDocument 400 /error/400.php
# Authorization Required
ErrorDocument 401 /error/401.php
# Forbidden
ErrorDocument 403 /error/403.php
# File Not Found
ErrorDocument 404 /error/404.php
# Internal Server Error
ErrorDocument 500 /error/500.php

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule (.*) /error/404.php [L]

###
# End Custom Error pages


# Compress all JavaScript, CSS and HTML files using GZIP
<IfModule mod_gzip.c>
	mod_gzip_on         			Yes
	mod_gzip_dechunk    			Yes
	mod_gzip_item_include file      \.(html?|txt|css|js|php|pl)$
	mod_gzip_item_include handler   ^cgi-script$
	mod_gzip_item_include mime      ^text\.*
	mod_gzip_item_include mime      ^application/x-javascript.*
	mod_gzip_item_exclude mime      ^image\.*
	mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</IfModule>


<Limit PUT DELETE>
order deny,allow
deny from all
